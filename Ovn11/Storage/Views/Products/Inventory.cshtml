@model IEnumerable<Storage.Models.ProductViewModel>

@{
    ViewData["Title"] = "Inventory";
}

<h1>Inventory</h1>

<form asp-action="SearchInventory">
    <div class="input-group mb-3">
        <input type="text" name="searchString" class="form-control" placeholder="Sök på Namn" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-outline-secondary">Sök</button>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>                   
                    @Html.DisplayFor(modelItem => item.InventoryValue)
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="row">
    <a asp-action="Index">Back to List</a>
</div>